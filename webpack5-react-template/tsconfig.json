{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./",
        "paths": {
            "@/*": ["./src/*"],
        },
        "outDir": "dist",
        "module": "esnext",
        "target": "esnext",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "strict": false,
        "allowSyntheticDefaultImports": true,
    },
    "include": ["./src/**/*", "./typings/**/*"],
    "exclude": ["node_modules", "dist", "build"]
}